<Window x:Class="SharpEncrypt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SharpEncrypt"
        mc:Ignorable="d" Name="PrimaryWindow"
        Title="SharpEncrypt" Height="250" Width="300">
    <Grid>
        <StackPanel Margin="10">
            <Button Name="btnOpenFile" Click="btnOpenFile_Click" HorizontalAlignment="Center" Padding="5,0" Margin="5">Open file</Button>
            <Label x:Name="labelName" Content="Selected: " HorizontalAlignment="Center" />
            <TextBox x:Name="textboxPassword" />
            <Button Name="btnEncrypt" Click="btnEncrypt_Click" HorizontalAlignment="Center" Padding="5,0" Margin="5">Encrypt</Button>
            <Button Name="btnDecrypt" Click="btnDecrypt_Click" HorizontalAlignment="Center" Padding="5,0" Margin="5,0,5,5">Decrypt</Button>
            <CheckBox x:Name="checkboxEncryptFilename" HorizontalAlignment="Center" Content="Encrypt filename" IsChecked="True"  Padding="5,0" Margin="5" />
            <ProgressBar x:Name="progressBar" Height="25" Minimum="0" Maximum="100" />
        </StackPanel>
    </Grid>
</Window>
